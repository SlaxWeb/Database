{
    "name": "slaxweb/database",
    "description": "Main Database Component for SlaxWeb Framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Tomaz Lovrec",
            "email": "tomaz.lovrec@gmail.com"
        }
    ],
    "require": {
        "php":  ">=7.0.0",
        "slaxweb/logger": "~0.4",
        "slaxweb/config": "~0.2",
        "slaxweb/getset": "~0.1",
        "icanboogie/inflector": "~1.4"
    },
    "require-dev": {
        "codeception/codeception": "~2.2",
        "codeception/specify": "*",
        "behat/gherkin": "~4.4",
        "phpunit/phpunit": "~5.4"
    },
    "autoload": {
        "psr-4": {
            "SlaxWeb\\Database\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SlaxWeb\\Database\\Test\\Unit\\": "tests/unit/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.6.x-dev"
        }
    }
}
